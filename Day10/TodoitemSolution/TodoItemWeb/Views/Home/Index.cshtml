@{
    ViewData["Title"] = "할 일 리스트";
}

<div class="text-center">
    <!-- 전체 리스트 -->
    <div class="main-content">
        <h4 class="display-4">할 일 리스트</h4>
        <u1 id="todoItems"></u1>
    </div>
    <!-- 검색 영역-->
    <div>
        <label for="Id">Id</label> <!--Id라는 이름의 라벨을 만들어 준다-->
        <input type="text" id="Id" /><!--빈 텍스트박스를 만들어 준다-->
        <input type="button" value="Search" id="btnSearch"/> <!--이름이 Search라는 버튼을 만들어준다-->
        <p id="todoItem"></p>
    </div>
    <div>
        <label for="Title">타이틀</label>
        <input type="text" id="Title" />
        <label for="IsComplete">완료 여부</label>
        <select>
            <option value="1">true</option>
            <option value="0">false</option>
        </select>
        <input type="button" value="Insert" id="btnInsert" />
        <p id="result"></p>
    </div>
</div>
